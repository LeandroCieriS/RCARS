<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemVehicles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_item_main_menu_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/brandLogo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="0.3"
        android:contentDescription="@string/brandLogo" />

    <LinearLayout
        android:id="@+id/VehicleInfo"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:layout_marginVertical="7.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>
