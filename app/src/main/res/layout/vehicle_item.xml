<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemVehicles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_item_main_menu_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/brandLogo"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="0.4"
        android:contentDescription="@string/brandLogo" />

    <LinearLayout
        android:id="@+id/VehicleInfo"
        android:layout_weight="0.6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginVertical="7.5dp"
        android:orientation="vertical">

            <TextView
                android:id="@+id/make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prueba"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prueba"
                android:textSize="35sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/VehicleDetailedInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7.5dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginVertical="7.5dp"
                android:layout_marginLeft="20dp"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/plateLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plateLbl"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/yearLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yearLbl"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/fuelLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fuelLbl"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/transmissionLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transmissionLbl"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/purchaseDateLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/purchaseDateLbl"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginVertical="7.5dp"
                android:layout_marginRight="20dp"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/plateData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234HDP"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/yearData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/fuelData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gasolina"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/transmissionData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/purchaseDateData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/05/2021"
                    android:textSize="22sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
